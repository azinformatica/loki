{
  "name": "@azinformatica/loki",
  "version": "2.21.0",
  "description": "Biblioteca de componentes visuais compartilhados construidos usando vuejs.",
  "main": "src/index.js",
  "private": false,
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "deploy": "npm version patch -m 'patch upgrade' && git push && git push --tags && npm publish",
    "lint": "vue-cli-service lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azinformatica/loki.git"
  },
  "author": "Charles Viegas",
  "license": "MIT",
  "dependencies": {
    "@azinformatica/pdfjs-dist": "~2.10.380",
    "accounting": "~0.4.1",
    "all-contributors-cli": "~6.20.0",
    "axios": "~0.27.2",
    "imagesloaded": "~4.1.4",
    "interactjs": "~1.10.17",
    "lodash": "~4.17.21",
    "moment": "~2.29.3",
    "moment-timezone": "~0.5.34",
    "sass": "~1.52.2",
    "sass-loader": "~12.2.0",
    "scrollmonitor": "1.2.4",
    "sortablejs": "~1.15.0",
    "soundex": "~0.2.1",
    "string-mask": "~0.3.0",
    "string-similarity": "~4.0.4",
    "v-money": "~0.8.1",
    "vue": "~2.6.14",
    "vuetify": "~2.6.6",
    "vuex": "~3.6.2",
    "web-pki": "~2.14.8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "~7.18.2",
    "@vue/cli-plugin-eslint": "~5.0.4",
    "@vue/cli-service": "~5.0.4",
    "@vue/eslint-config-prettier": "~7.0.0",
    "@vue/test-utils": "~1.3.0",
    "babel-core": "~6.26.3",
    "babel-jest": "~24.9.0",
    "babel-loader": "~9.1.2",
    "babel-preset-env": "~1.7.0",
    "babel-preset-stage-3": "~6.24.1",
    "cross-env": "~7.0.3",
    "css-loader": "~6.2.0",
    "eslint": "~7.32.0",
    "eslint-plugin-jest": "~26.4.6",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-vue": "~7.20.0",
    "jest": "~24.9.0",
    "jest-serializer-vue": "~2.0.2",
    "prettier": "~2.6.2",
    "regenerator-runtime": "~0.13.9",
    "vue-jest": "~3.0.7",
    "vue-loader": "~17.0.0",
    "vue-router": "~3.5.4",
    "vue-template-compiler": "~2.6.14",
    "webpack": "~5.73.0",
    "webpack-dev-server": "~4.9.1"
  },
  "peerDependencies": {
    "@azinformatica/pdfjs-dist": "~2.10.380",
    "axios": "~0.27.2",
    "moment-timezone": "~0.5.34",
    "scrollmonitor": "1.2.4",
    "web-pki": "~2.14.8"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:jest/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "overrides": [
      {
        "files": [
          "**/test/**/*.test.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
